{
  "name": "express-logger",
  "version": "0.1.0",
  "description": "Default express logging middleware to match BYU app dev logging standards",
  "main": "dist/express-logger.js",
  "types": "dist/express-logger.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "del dist && tsc",
    "coverage": "npm run test -- --coverage || exit 0",
    "lint": "ts-standard | snazzy",
    "lint:fix": "ts-standard --fix | snazzy",
    "test": "jest",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/byu-oit/express-logger.git"
  },
  "author": "Brigham Young University",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/byu-oit/express-logger/issues"
  },
  "homepage": "https://github.com/byu-oit/express-logger#readme",
  "dependencies": {
    "pino": "^6.11.2",
    "pino-http": "^5.5.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/pino": "^6.3.6",
    "@types/pino-http": "^5.4.0",
    "@types/uuid": "^8.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "pino-pretty": "^4.7.1",
    "snazzy": "^9.0.0",
    "ts-jest": "^26.5.4",
    "ts-standard": "^10.0.0",
    "typescript": "^4.2.3"
  },
  "engines": {
    "node": ">=10"
  },
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  },
  "lint-staged": {
    "*.ts": "npm run lint:fix"
  }
}
